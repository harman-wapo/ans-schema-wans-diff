{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.10.12/story_elements/interactive.json",
  "description": "An interactive content element",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "_id": {
      "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.10.12/traits/trait_id.json"
    },
    "subtype": {
      "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.10.12/traits/trait_subtype.json"
    },
    "attributes": {
      "description": "Any JSON describing the properties of the Interactive content element.",
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(?!(referent|type|version)$)[a-zA-Z0-9_]*$": {
          "anyOf": [
            { "type": "string" },
            { "type": "integer" },
            { "type": "boolean" },
            { "type": "array" },
            { "type": "object" }
          ]
        }
      }
    }
  },
  "fallback_image": {
    "title": "Fallback Image URL",
    "description": "The Fallback Image url. This will be rendered in place of the contents of the Interactive content element when it's contents cannot be used.",
    "type": "string"
  },
  "additional_properties": {
    "$ref": "https://raw.githubusercontent.com/washingtonpost/ans-schema/master/src/main/resources/schema/ans/0.10.12/traits/trait_additional_properties.json"
  },
  "required": ["type", "subtype"]
}
